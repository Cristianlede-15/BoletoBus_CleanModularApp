@model IEnumerable<BoletosBus_CleanModularApp.Web.Models.ClienteModels.ClienteAccessModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Clientes</h1>

<p>
    <a asp-action="Create">Crear cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdCliente }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdCliente }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdCliente })
            </td>
        </tr>
}
    </tbody>
</table>
