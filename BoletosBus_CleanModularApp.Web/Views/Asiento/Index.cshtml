@model IEnumerable<BoletosBus_CleanModularApp.Web.Models.AsientoModels.AsientoGetModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Asientos</h1>

<p>
    <a asp-action="Create">Crear nuevo asiento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroPiso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroAsiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroPiso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroAsiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "text-danger", @onclick = "return confirm('Are you sure you want to delete this item?');" })

            </td>
        </tr>
}
    </tbody>
</table>
